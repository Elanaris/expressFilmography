        <label>Instagram (běžná URL)</label>
        <input name="socialsIG" class="form-control" value="<%= data.socialsIG %>" autocomplete="off">
        <div class="my-4">
          <button class="w-50 btn btn-lg btn-primary" type="submit">Uložit</button>
        </div>
      </div>
      </form>
    </div>

  </div>

</div>

<%- include('partials/footer-admin') %>
